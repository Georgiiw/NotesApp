@model NoteViewModel

<div class="row">
	<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
		<div class="mb-3">
			<label asp-for="Title" class="form-label">Title</label>
			<input asp-for="Title" class="form-control" aria-required="true">
			<span asp-validation-for="Title" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="Content" class="form-label">Content</label>
			<textarea asp-for="Content" class="form-control" aria-required="true" style="height: 200px"></textarea>
			<span asp-validation-for="Content" class="text-danger"></span>
		</div>
		<button type="submit" class="form-btn" value="Edit"><i class="bi bi-floppy"></i>Save Changes</button>
	</form>
</div>